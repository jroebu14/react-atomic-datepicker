{
  "name": "react-atomic-datepicker",
  "version": "0.0.1",
  "description": "A super lightweight hook for building a custom datepicker for React",
  "license": "MIT",
  "repository": "jroebu14/react-atomic-datepicker",
  "author": {
    "name": "Jonathan Roebuck",
    "email": "jonathan.roebuck@bbc.co.uk",
    "url": "https://github.com/jroebu14"
  },
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:coverage": "yarn test; open coverage/lcov-report/index.html",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn build",
    "format": "prettier {src,src/**}/*.{md,js,jsx,tsx} --write"
  },
  "files": [
    "CHANGELOG.md",
    "src/**/*.js",
    "dist",
    "README.md",
    "scripts/"
  ],
  "browserslist": "> 0.25%, not dead",
  "keywords": [
    "react",
    "calendar",
    "hook",
    "react-atomic-datepicker",
    "datepicker",
    "dates"
  ],
  "peerDependencies": {
    "react": "^16.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@testing-library/react-hooks": "^3.4.2",
    "babel-jest": "26.3.0",
    "codecov": "^3.7.2",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "^26.5.3",
    "prettier": "2.1.2",
    "react": "^16.12.0",
    "react-test-renderer": "16.14.0",
    "rollup": "^2.32.0",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^7.0.2"
  }
